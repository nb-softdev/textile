<h3 class="alert alert-info">Listing users <div class="right mt3"><%= link_to 'New User', new_admin_user_path, :class => "btn-primary btn" %></div></h3>
<div class="table-responsive">
	<table class="table table-hover table-condensed">
  <thead>
    <tr>
    	<th><%= sortable "email", t("general.email") %></th>
    	<th><%= sortable "name", t("general.name") %></th>
    	<th><%= sortable "company_id", t("general.company") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
      	<td><%= user.email %></td>
      	<td><%= user.name %></td>
      	<td><%= user.company_user.company.name if user.company_user %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user), :class => "btn-success btn" %>
        <%= link_to 'Destroy', [:admin, user], method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn-danger btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="right"><%= will_paginate @users %></div>
</div>