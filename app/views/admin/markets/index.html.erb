<h1>Listing markets</h1>

<table class="table">
  <thead>
    <tr>
    	<th><%= sortable "name", t("general.name") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @markets.each do |market| %>
      <tr>
      	<td><%= market.name %></td>
        <td><%= link_to 'Show', [:admin, market] %></td>
        <td><%= link_to 'Edit', edit_admin_market_path(market) %></td>
        <td><%= link_to 'Destroy', [:admin, market], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

