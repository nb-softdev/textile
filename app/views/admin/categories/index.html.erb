<h3 class="alert alert-info">Listing categories <div class="right mt3"><%= link_to 'New Category', new_admin_category_path, :class => "btn-primary btn" %></div></h3>
<div class="table-responsive">
	<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th><%= sortable "name", t("general.name") %></th>
      <th>Parent</th>
      <th>Is active</th>    	
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |cat| %>
      <tr>
        <td><%= cat.name %></td>
        <td><%= cat.parent.name if cat.parent %></td>
        <td><%= cat.is_active %></td>
        <td><%= link_to 'Edit', edit_admin_category_path(cat), :class => "btn-success btn" %>
        <%= link_to 'Destroy', [:admin, cat], method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn-danger btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class="right"><%= will_paginate @categories %></div>
</div>

