<h1>Listing albums</h1>

<table class="table">
  <thead>
    <tr>
      <th>Company</th>
      <th>Name</th>
      <th>Description</th>
      <th>Code</th>
      <th>Is active</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @albums.each do |album| %>
      <tr>
        <td><%= album.company.name %></td>
        <td><%= album.name %></td>
        <td><%= album.description %></td>
        <td><%= album.code %></td>
        <td><%= album.is_active %></td>
        <th><%= link_to 'Products', admin_album_album_products_path(album) %></th>
        <td><%= link_to 'Show', [:admin, album] %></td>
        <td><%= link_to 'Edit', edit_admin_album_path(album) %></td>
        <td><%= link_to 'Destroy', [:admin, album], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @album_products %>
<%= link_to 'New Album', new_admin_album_path %>
