<h1>Listing work_types</h1>

<table class="table">
  <thead>
    <tr>
      <th><%= sortable "name", t("general.name") %></th>
      <th>Description</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_types.each do |work_type| %>
      <tr>
        <td><%= work_type.name %></td>
        <td><%= work_type.description %></td>
        <td><%= work_type.is_active %></td>      	
        <td><%= link_to 'Show', [:admin, work_type] %></td>
        <td><%= link_to 'Edit', edit_admin_work_type_path(work_type) %></td>
        <td><%= link_to 'Destroy', [:admin, work_type], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate @work_types %>

<%= link_to 'New Work type', new_admin_work_type_path %>
