<h3 class="alert alert-info">Listing work types <div class="right mt3"><%= link_to 'New Work type', new_admin_work_type_path, :class => "btn-primary btn" %></div></h3>
<div class="table-responsive">
	<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th><%= sortable "name", t("general.name") %></th>
      <th>Description</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_types.each do |work_type| %>
      <tr>
        <td><%= work_type.name %></td>
        <td><%= work_type.description %></td>
        <td><%= work_type.is_active %></td>      	
        
        <td><%= link_to 'Edit', edit_admin_work_type_path(work_type), :class => "btn-success btn" %>
        <%= link_to 'Destroy', [:admin, work_type], method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn-danger btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="right"><%= will_paginate @work_types %></div>
</div>

