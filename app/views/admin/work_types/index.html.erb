<h1>Listing work_types</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_types.each do |work_type| %>
      <tr>
        <td><%= link_to 'Show', work_type %></td>
        <td><%= link_to 'Edit', edit_admin_work_type_path(work_type) %></td>
        <td><%= link_to 'Destroy', work_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

