<h3 class="alert alert-info">Listing companies <div class="right mt3"><%= link_to 'New Company', new_admin_company_path, :class => "btn-primary btn" %></div></h3>
<div class="table-responsive">
	<table class="table table-hover table-condensed">
  <thead>
    <tr>
    	<th><%= sortable "name", t("general.name") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
      	<td><%= company.name %></td>
        <td><%= link_to 'Edit', edit_admin_company_path(company), :class => "btn-success btn" %>
        <%= link_to 'Destroy', [:admin, company], method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn-danger btn" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div class="right"><%= will_paginate @companies %></div>
</div>
