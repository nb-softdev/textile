<!DOCTYPE html>
<html>
  <head>
		<title><%= @current_company.name %></title>
		<meta http-equiv="content-type" content="text/html; charset=utf-8" />
		<meta name="description" content="" />
		<meta name="keywords" content="" />
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Textile" %>">
    
    <%#= stylesheet_link_tag 'home/application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'company/application', 'data-turbolinks-track' => true %>
		<noscript>
			<link rel="stylesheet" href="css/skel-noscript.css" />
			<link rel="stylesheet" href="css/style.css" />
		</noscript>
		<!--[if lte IE 8]><link rel="stylesheet" href="css/ie/v8.css" /><![endif]-->    
    <%= csrf_meta_tags %>
  </head>

	<body>

		<!-- Header -->
			<header id="header">

				<!-- Logo -->
					<h1 id="logo">
						<% if @current_company.logo %>
							<%= image_tag(@current_company.logo_url) %>
						<% else %>	
						<%= current_subdomain %>
						<% end %>
					</h1>
				
				<!-- Nav -->
					<nav id="nav">
						<ul>
							<li><a href="#intro">Home</a></li>
							<li><a href="#one"><%= @current_company.what_i_do_label %></a></li>
							<li><a href="#two"><%= @current_company.who_i_am_label %></a></li>
							<li><a href="#work"><%= @current_company.my_work_label %></a></li>
							<li><a href="#contact">Contact</a></li>
							<% if user_signed_in? %>
								<li><%= link_to 'Admin Area', company_admin_home_path, class: 'navbar-brand' %></li>
							  <li><%= link_to 'Sign out', destroy_user_session_path, :method=>'delete' %></li>
							<% else %>
							  <li><%= link_to 'Sign in', new_user_session_path %></li>
							<% end %>								
						</ul>
					</nav>

			</header>
			
			<%= yield %>
			
		<!-- Footer -->
			<footer id="footer">
			
				<!--
				     Social Icons
				     
				     Use anything from here: http://fortawesome.github.io/Font-Awesome/cheatsheet/)
				-->
					<ul class="actions">
						<li><a href="#" class="fa solo fa-twitter"><span>Twitter</span></a></li>
						<li><a href="#" class="fa solo fa-facebook"><span>Facebook</span></a></li>
						<li><a href="#" class="fa solo fa-google-plus"><span>Google+</span></a></li>
						<li><a href="#" class="fa solo fa-dribbble"><span>Dribbble</span></a></li>
						<li><a href="#" class="fa solo fa-pinterest"><span>Pinterest</span></a></li>
						<li><a href="#" class="fa solo fa-instagram"><span>Instagram</span></a></li>
					</ul>

				<!-- Menu -->
					<ul class="menu">
						<li><%= @current_company.footer_content %></li>
					</ul>
			
			</footer>

	</body>



</html>
