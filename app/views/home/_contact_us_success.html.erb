<div class="row half">
	<div class="4u">
		<% flash.each do |name, msg| %>
		  <% if msg.is_a?(String) %>
		    <div class="success alert-<%= name.to_s == 'notice' ? 'success' : 'danger' %>">
		      <%= content_tag :div, msg, :id => "flash_#{name}" %>
		    </div>
		  <% end %>
		<% end %>
	</div>
</div>