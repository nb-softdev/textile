<h3 class="alert alert-info">Listing work types <div class="right mt3"><%= link_to 'New Work Type', new_company_admin_company_work_type_path, :class => "btn-primary btn" %></div></h3>
<div class="table-responsive">
	<table class="table table-hover table-condensed">
		  <thead>
		    <tr>
		    	<th><%= sortable "name", t("general.name") %></th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>
		
		  <tbody>
		    <% @company_work_types.each do |company_work_type| %>
		      <tr>
		      	<td><%= company_work_type.work_type.name if company_work_type.work_type %></td>
		      	<td><%= link_to 'Edit', edit_company_admin_company_work_type_path(company_work_type), :class => "btn-success btn" %>
		        <%= link_to 'Destroy', [:company_admin, company_work_type], method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn-danger btn" %></td>
		      </tr>
		    <% end %>
		  </tbody>
	</table>
			<div class="right"><%= will_paginate @company_work_types %></div>
</div>	