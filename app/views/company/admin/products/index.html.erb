<h3 class="alert alert-info">Listing products <div class="right mt3"><%= link_to 'New Product', new_company_admin_product_path, :class => "btn-primary btn" %></div></h3>
<div class="table-responsive">
	<table class="table table-hover table-condensed">
	  <thead>
	    <tr>
	    	<th><%= sortable "name", t("general.name") %></th>
	    	<th><%= sortable "code", t("general.code") %></th>
	      <th colspan="3"></th>
	    </tr>
	  </thead>
	
	  <tbody>
	    <% @products.each do |product| %>
	      <tr>
	      	<td><%= product.name %></td>
	      	<td><%= product.code %></td>
	        <td><%= link_to 'Edit', edit_company_admin_product_path(product), :class => "btn-success btn" %></td>
	        <td><%= link_to 'Destroy', [:company_admin, product], method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn-danger btn" %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
	<div class="right"><%= will_paginate @products %></div>
</div>	