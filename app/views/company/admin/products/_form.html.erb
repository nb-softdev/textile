<%= form_for [:company_admin, @product] do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <%= f.hidden_field :company_id, :value => @current_company.id  %>

  <div class="field">
      <%= f.label :name %><br>
    <%= f.text_field :name %>
    </div>
    
  <div class="field">
      <%= f.label :description %><br>
    <%= f.text_area :description %>
    </div>
    
  <div class="field">
      <%= f.label :code %><br>
    <%= f.text_field :code %>
    </div>
    
  <div class="field">
      <%= f.label :price %><br>
    <%= f.text_field :price %>
    </div>

   	<div class="field">
      <%= f.label :category_id %>
      <%= f.select :category_id, options_for_select([["Select", ""]] + category_options_array, (@product.category.id unless @product.category.nil?)) %>
   	</div>
   	
  <div class="field">
      <%= f.label :is_active %><br>
    <%= f.check_box :is_active %>
    </div>    

  <div class="field">
      <%= f.label :photo %><br>
    <%= f.file_field :photo %>
    </div>        

  <div class="form-group">
    <%= image_tag(@product.photo_url) if @product.photo.present? %>
    </div>     

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
